<% if current_user.liking?(shop) %>
  <%= form_for(current_user.favorites.find_by(like_id: shop.id), html: { method: :delete }) do |f| %>
     <%= hidden_field_tag :like_id, shop.id %>
     <%= f.submit 'Unlike', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
   <%= hidden_field_tag :like_id, shop.id %>
   <%= f.submit "Like", class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>
