<div class="row">
  <aside class="col-md-8">
    <%= form_for(@shop) do |f| %>
    <div class="form-group">
        <%= f.label :shopname, "店名" %>
        <%= f.text_field :shopname, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :content, '説明' %>
        <%= f.text_area :content, class: 'form-control', rows: 5 %>
      </div>

      <div class="form-group">
        <%= f.label :charge, '予算' %>
        <%= f.number_field :charge, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :starttime, '開始時間' %>
        <%= f.number_field :starttime, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :finishtime, '終了時間' %>
        <%= f.number_field :finishtime, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :place, '場所' %>
        <%= f.text_field :place, class: 'form-control' %>
      </div>

      <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
    <% end %>
