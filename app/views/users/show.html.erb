<div class="user-profile">
  <div class="icon text-center">
    <div class="img-circle">
      <%= image_tag(@user.image, options = { size: 80 }) if current_user.image.present? %>
    </div>
  </div>
  <div class="name text-center">
    <h1><%= @user.name %></h1>
  </div>

  <div class="status text-center">
    <ul>
      <li>
        <div class="status-label">likes</div>
        <div id="want_count" class="status-value">
          <%= @count_like %>
        </div>
      </li>
    </ul>
  </div>
</div>
<%= render 'shops/shops', shops: @shops %>
